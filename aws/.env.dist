# AWS Security Group DDNS Configuration

# AWS API credentials
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_DEFAULT_REGION="eu-west-1"

# DNS nameserver for hostname resolution
DNS_NAMESERVER=1.1.1.1

# Log rotation (in hours)
LOG_ROTATION_HOURS=168

# AWS security group rules
# Format: security_group_id|identifier|hostname|region
#
# security_group_id: ID of the AWS security group (e.g., "sg-0123456789abcdef0")
# identifier: Unique identifier for this rule (e.g., "nas1", "nas2-sg1")
# hostname: Dynamic hostname to resolve (e.g., "nas1.example.com")
# region: AWS region (e.g., "eu-west-1", "us-east-1", "ap-southeast-1")
#
# Examples:
# Single NAS, single security group:
# AWS_RULES=(
#     "sg-0123456789abcdef0|nas1|nas1.example.com|eu-west-1"
# )
#
# Single NAS, multiple security groups:
# AWS_RULES=(
#     "sg-0123456789abcdef0|nas1-sg1|nas1.example.com|eu-west-1"
#     "sg-abcdef0123456789|nas1-sg2|nas1.example.com|eu-west-1"
# )
#
# Multiple NAS, multiple security groups:
# AWS_RULES=(
#     "sg-0123456789abcdef0|nas1|nas1.example.com|eu-west-1"
#     "sg-0123456789abcdef0|nas2|nas2.example.com|eu-west-1"
#     "sg-abcdef0123456789|backup|backup.example.com|us-east-1"
# )
AWS_RULES=(
    "sg-xxxxxxxxx|nas1|nas1.example.com|eu-west-1"
)
