# Scaleway Security Group DDNS Configuration

# Scaleway API credentials
SCW_ACCESS_KEY="your-access-key"
SCW_SECRET_KEY="your-secret-key"
SCW_DEFAULT_ORGANIZATION_ID="your-org-id"
SCW_DEFAULT_PROJECT_ID="your-project-id"

# DNS nameserver for hostname resolution
DNS_NAMESERVER=1.1.1.1

# Log rotation (in hours)
LOG_ROTATION_HOURS=168

# Scaleway security group rules
# Format: security_group_name|identifier|hostname|zone
#
# security_group_name: Name of the Scaleway security group (e.g., "office-vpn")
# identifier: Unique identifier for this rule (e.g., "nas1", "nas2")
# hostname: Dynamic hostname to resolve (e.g., "nas1.example.com")
# zone: Scaleway zone (e.g., "fr-par-1", "fr-par-2", "nl-ams-1")
#
# Example:
# SCALEWAY_RULES=(
#     "office-vpn|nas1|nas1.example.com|fr-par-1"
#     "office-vpn|nas2|nas2.example.com|fr-par-1"
#     "backup-access|backup-server|backup.example.com|nl-ams-1"
# )
SCALEWAY_RULES=(
    "office-vpn|nas1|nas1.example.com|fr-par-1"
)
