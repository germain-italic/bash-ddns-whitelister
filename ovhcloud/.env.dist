# OVH Edge Network Firewall DDNS Configuration

# OVH API credentials
OVH_APPLICATION_KEY="your-application-key"
OVH_APPLICATION_SECRET="your-application-secret"
OVH_CONSUMER_KEY="your-consumer-key"
OVH_ENDPOINT="ovh-eu"

# DNS nameserver for hostname resolution
DNS_NAMESERVER=1.1.1.1

# Log rotation (in hours)
LOG_ROTATION_HOURS=168

# OVH firewall rules
# Format: ip_address|identifier|hostname
# ip_address: The OVH IP address that has the firewall (e.g., "203.0.113.10")
# identifier: Unique identifier for this rule (e.g., "nas1")
# hostname: Dynamic hostname to resolve to IP
OVH_RULES=(
    "203.0.113.10|nas1|nas1.example.com"
)
